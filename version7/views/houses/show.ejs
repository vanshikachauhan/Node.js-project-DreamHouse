<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">DREAM HOUSE</p>
			<div class="list-group">
				<li class="list-group-item active">Item 1</li>
				<li class="list-group-item">Item 2</li>
				<li class="list-group-item">Item 3</li>
				<li class="list-group-item">Item 4</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
			<img class="img-responsive" src="<%= house.image %>">
				<div class="captain-full">
					<h4 class="pull-right">
					$10000/cost
				    </h4>
				    <h4><a href=""><%= house.name %></a></h4>
				    <p><%= house.description %></p>
				</div>	
			</div>
			<div class="well">
				<div class="text-right">
					<p><a class="btn btn-success" href="/houses/<%= house._id%>/comments/new">ADD NEW COMMENT</a></p>
				</div>
				<% house.comments.forEach(function(comment) { %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
						<p>
							<%= comment.text %>
						</p>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>
<% include ../partials/footer %>
